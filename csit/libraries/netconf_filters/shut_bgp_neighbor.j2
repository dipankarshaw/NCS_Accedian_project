<config>
{% for neighbor in bgp -%}
    <bgp xmlns="http://cisco.com/ns/yang/Cisco-IOS-XR-ipv4-bgp-cfg">
      <instance>
        <instance-name>default</instance-name>
        <instance-as>
          <as>0</as>
          <four-byte-as>
            <as>8220</as>
            <default-vrf>
              <bgp-entity>
                <neighbors>
                  <neighbor>
                    <neighbor-address>{{ neighbor['neighbor-address'] }}</neighbor-address>
                    <shutdown>{{ bgp_action }}</shutdown>
                  </neighbor>
                </neighbors>
              </bgp-entity>
            </default-vrf>
          </four-byte-as>
        </instance-as>
      </instance>
    </bgp>
{% endfor -%}
</config>
